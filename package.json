{
  "name": "@warmautomation/aef",
  "version": "0.1.0",
  "description": "Agent Event Format - Vendor-neutral event schema for AI agent execution",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "aef": "dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "build:cli": "bun build src/cli.ts --outfile dist/cli.js --target node",
    "dev": "bun --watch src/cli.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "aef": "bun src/cli.ts"
  },
  "keywords": [
    "agent",
    "event",
    "format",
    "claude",
    "codex",
    "ai"
  ],
  "author": "WarmAutomation",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "ajv": "^8.17.0",
    "ajv-formats": "^3.0.0",
    "commander": "^12.0.0"
  }
}
